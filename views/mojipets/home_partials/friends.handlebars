<ul id="friends-ul">
  <li>
    <div>
      <p>{{owndisplayname}} (you)</p>
      <form class="friend-form" method="GET" action="profile/{{ownusername}}">
        <label for="{{own_id}}">
          <input id="{{own_id}}" type="submit" name="profile" value="View Profile" />
        </label>
      </form>
    </div>
  </li>
  {{#each friends}}
  <li>
    <div>
      <p>{{this.displayname}}</p>
      <form class="friend-form" method="GET" action="profile/{{this.username}}">
        <label for="{{this._id}}">
          <input id="{{this._id}}" type="submit" name="profile" value="View Profile" />
        </label>
      </form>

      <form class="friend-form delete" data-id={{this._id}}>
        <label for="{{this._id}}-delete">
          <input id="{{this._id}}-delete" data-id={{this._id}} type="submit" name="delete" value="X" />
        </label>
      </form>
    </div>
  </li>
  {{/each}}
</ul>