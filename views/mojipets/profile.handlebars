<div id="profile">
  {{#if error}}
  <div>
    <p id="error">The user {{username}} does not exist</p>
  </div>
  {{else}}
  <div id="profile-header">
    <img src="{{profile_pic}}" alt="{{display_name}}" id="profile-pic" />
    <h1>{{display_name}}</h1>
  </div>
  <p>Member since {{join_date}}</p>

  {{#if (gt fav_pets.length 6)}}
  <h2>All Pets</h2>
  {{else}}
  <h2>Favorite Pets</h2>
  {{/if}}

  {{#if (gt fav_pets.length 6)}}
  <div id="fav-pets" class="scrollable">
  {{else}}
  <div id="fav-pets">
  {{/if}}
    {{#each fav_pets}}
      <img alt="{{emoji.name}}" src="{{emoji.img}}" />
    {{/each}}
  </div>
  {{/if}}

  <div class="center">
    <a href="/">Return to home page</a>
  </div>
</div>