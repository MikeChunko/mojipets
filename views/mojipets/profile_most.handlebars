<div id="profile">
  {{#if error}}
    <div>
      <p id="error">{{error_msg}}</p>
    </div>

    <div class="center">
      <a href="/">Return to home page</a>
    </div>
  {{else}}
    <div id="profile-header">
      <img src="{{profile_pic}}" alt="{{display_name}}" id="profile-pic" />
      <h1>{{display_name}}</h1>
    </div>
    <p>Member since {{join_date}}</p>
    <p>Last online: {{last_online}}</p>

    <h2>Most Interacted With Pets</h2>

    <div id="all-pets">
      {{#each most_pets}}
        <div>
          <img alt="{{emoji.name}}" src="{{emoji.img}}" class="left" />
          <div class="left">
            <p>{{name}}</p>
            <p>{{happiness}}</p>
            <p>{{status}}</p>
            <p>{{age}}</p>
            <p>{{interactions}} interactions</p>
          </div>
        </div>
      {{/each}}
    </div>

  <div class="left">
    <a href="/profile/{{uname}}">See favorite pets</a>
  </div>

  <div class="right">
    <a href="/">Return to home page</a>
  </div>

  <div class="center">
    <a href="/profile/{{uname}}/all">See all pets</a>
  </div>
  {{/if}}
</div>